    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_below="@+id/tvName"
        android:layout_marginStart="13dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/ivUsers"
